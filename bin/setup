#!/bin/bash

PROJECT_ROOT=$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )
ENV_PATH=$(echo "$PROJECT_ROOT/env")

if [ ! -d "$ENV_PATH" ]; then
    #Create virtualenv
    python3.6 -m venv env
    echo -e "\e[1mVirtualenv has been created.\e[0m"
    #Install packages
    bash $PROJECT_ROOT/bin/update $1
else
    echo -e "\e[1mEnvironment already exists.\e[0m"
fi